{
    "$datacontext": {
        "in": "$.",
        "datavalues": {
            "Lines": [
                "$formatstring {$loc UI_MENU_PAGE_LOCATION_COMPLETION}  {$.ChallengesCompleted,.0f} {$loc UI_DIALOG_SLASH} {$.ChallengesTotal,.0f}"
            ]
        },
        "do": {
            "$each $.Lines": {
                "controller": "list",
                "view": "menu3.containers.ListContainer",
                "direction": "horizontal",
                "data": {
                    "direction": "horizontal"
                },
                "children": [
                    {
                        "id": "statusline_element",
                        "view": "menu3.TextboxElement",
                        "data": {
                            "font": "bold",
                            "multiline": false,
                            "text": "$.",
                            "toUpper": true,
                            "size": 18,
                            "color": "#464646",
                            "height": 20,
                            "width": 600,
                            "dropShadow": true,
                            "useDynamicTextBounds": true
                        }
                    },
                    {
                        "view": "menu3.basic.Divider",
                        "nrows": 0.1,
                        "ncols": 0.2,
                        "selectable": false,
                        "pressable": false
                    }
                ]
            }
        }
    }
}